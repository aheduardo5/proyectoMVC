@using MiPrimeraAplicacionConEntityFramework.Models
@model  List<SucursalCLS>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>@Html.LabelFor(p => Model[0].iidsucursal)</td>
            <td>@Html.LabelFor(p => Model[0].nombre)</td>
            <td>@Html.LabelFor(p => Model[0].telefono)</td>
            <td>@Html.LabelFor(p => Model[0].email)</td>
            <td>Operaciones</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.iidsucursal</td>
                <td>@item.nombre</td>
                <td>@item.telefono</td>
                <td>@item.email</td>
                <td>
                    @Html.ActionLink(" ","Editar", "Sucursal", new { id = @item.iidsucursal }, new { @class= "bi bi-pencil-square btn btn-primary" })
                    @Html.ActionLink(" ","Editar", "Sucursal", new { id= @item.iidsucursal} , new { @class= " " })
                </td>
            </tr>

        }
    </tbody>
</table>
@Html.ActionLink("Agregar Sucursal", "Agregar", "Sucursal", null, new { @class = "btn btn-primary" })
