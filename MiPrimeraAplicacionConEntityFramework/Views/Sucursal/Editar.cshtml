@using MiPrimeraAplicacionConEntityFramework.Models
@model  SucursalCLS
@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("Editar", "Sucursal", FormMethod.Post))
        {
            <div>
                @Html.LabelFor(p => p.iidsucursal, new { @class = "mt-3" })
                @Html.TextBoxFor(p => p.iidsucursal, new { @class = "form-control", disabled = "true" }) <!--Utilizar textfor te ayudara a que se rellene todo tu modelo-->
                @Html.ValidationMessage("iidmarca", new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(p => p.nombre, new { @class = "mt-3" })
                @Html.TextBoxFor(p => p.nombre, new { @class = "form-control" }) <!--Utilizar textfor te ayudara a que se rellene todo tu modelo-->
                @Html.ValidationMessage("nombre", new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(p => p.direccion)
                @Html.TextBoxFor(p => p.direccion, new { @class = "form-control" })
                @Html.ValidationMessage("descripcion", new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(p => p.telefono)
                @Html.TextBoxFor(p => p.telefono, new { @class = "form-control" })
                @Html.ValidationMessage("descripcion", new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(p => p.email)
                @Html.TextBoxFor(p => p.email, new { @class = "form-control" })
                @Html.ValidationMessage("descripcion", new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(p => p.fechaApertura)
                @Html.EditorFor(p => p.fechaApertura, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("descripcion", new { @class = "text-danger" })
            </div>
            <br />
            <div class="d-flex flex-column flex-sm-row">
                <input type="submit" class="btn btn-sm btn-primary" value="Guardar" />
                @Html.ActionLink(" ", "Regresar", "Sucursal", new { @class = "btn btn-sm btn-primary bi bi-house-door-fill my-2 my-sm-0 mx-sm-2" })
            </div>
        }
    </div>
</div>