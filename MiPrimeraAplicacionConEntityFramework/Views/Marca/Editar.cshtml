@using MiPrimeraAplicacionConEntityFramework.Models
@model  MarcaCLS
@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>
<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("Agregar", "Marca", FormMethod.Post))
        {
            <div>
                @Html.LabelFor(p => p.iidmarca, new { @class = "mt-3"})
                @Html.TextBoxFor(p => p.iidmarca, new { @class = "form-control", disabled = "true" }) <!--Utilizar textfor te ayudara a que se rellene todo tu modelo-->
                @Html.ValidationMessage("iidmarca", new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(p => p.nombre, new { @class = "mt-3" })
                @Html.TextBoxFor(p => p.nombre, new { @class = "form-control" }) <!--Utilizar textfor te ayudara a que se rellene todo tu modelo-->
                @Html.ValidationMessage("nombre", new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(p => p.descripcion)
                @Html.TextBoxFor(p => p.descripcion, new { @class = "form-control" })
                @Html.ValidationMessage("descripcion", new { @class = "text-danger" })
            </div>
            <br />
            <div>
                <input type="submit" class="btn btn-primary" value="Guardar" />
            </div>


        }
    </div>
</div>