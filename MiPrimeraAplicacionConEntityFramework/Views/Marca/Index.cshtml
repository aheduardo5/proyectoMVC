@using MiPrimeraAplicacionConEntityFramework.Models
@model List<MarcaCLS>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@Html.ActionLink("Agregar","Agregar","Marca", null, new { @class="btn btn-primary mb-3"})
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td width="10%">@Html.LabelFor(p=>Model[0].iidmarca)</td>
            <td width="20%">@Html.LabelFor(p=>Model[0].nombre)</td>
            <td>@Html.LabelFor(p=>Model[0].descripcion)</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.iidmarca</td>
                <td>@item.nombre</td>
                <td>@item.descripcion</td>
            </tr>
        }

    </tbody>
</table>

